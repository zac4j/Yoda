<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:background">@drawable/bg_card_view</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space.divider</item>
        <item name="android:layout_marginTop">@dimen/space.small</item>
        <item name="android:layout_marginBottom">@dimen/space.small</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="FlatDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space.very_small</item>
        <item name="android:background">@color/gray_light</item>
    </style>

</resources>
