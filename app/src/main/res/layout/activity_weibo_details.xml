<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

  <android.support.design.widget.AppBarLayout
      android:id="@id/appbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      >

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@id/collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:contentScrim="?android:actionBarSize"
        app:expandedTitleMarginEnd="64dp"
        app:expandedTitleMarginStart="48dp"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        app:title=" "
        >

      <LinearLayout
          android:id="@id/weibo_detail_main_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          app:layout_collapseMode="parallax"
          >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingEnd="@dimen/space.small"
            android:paddingStart="@dimen/space.small"
            android:paddingTop="@dimen/space.small"
            >

          <ImageView
              android:id="@id/weibo_detail_iv_avatar"
              android:layout_width="@dimen/img.medium"
              android:layout_height="@dimen/img.medium"
              android:layout_marginEnd="@dimen/space.medium"
              android:layout_marginStart="?android:actionBarSize"
              />

          <TextView
              android:id="@id/weibo_detail_tv_nickname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/weibo_detail_iv_avatar"
              android:textAppearance="@style/TextAppearance.AppCompat"
              tools:text="湾区日报"
              />

          <TextView
              android:id="@id/weibo_detail_tv_username"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/space.small"
              android:layout_marginStart="@dimen/space.small"
              android:layout_toEndOf="@id/weibo_detail_tv_nickname"
              android:ellipsize="end"
              android:maxLength="16"
              android:textAppearance="@style/TextAppearance.AppCompat.Small"
              tools:text="wanquribao"
              />

          <TextView
              android:id="@id/weibo_detail_tv_post_from"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/weibo_detail_tv_nickname"
              android:layout_marginTop="@dimen/space.very_small"
              android:layout_toEndOf="@id/weibo_detail_iv_avatar"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              tools:text="from Weibo.com"
              />

        </RelativeLayout>

        <TextView
            android:id="@id/weibo_detail_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/space.small"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Would you like to have a library of swatches at your fingertips in Sketch? Check out this plugin!http://buff.ly/2lErpKy "
            />

        <TextView
            android:id="@id/weibo_detail_tv_post_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"
            android:maxLength="16"
            android:padding="@dimen/space.small"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            tools:text="4min"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/space.small"
            >

          <TextView
              android:id="@id/weibo_detail_tv_repost"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/space.very_small"
              android:drawableStart="@drawable/ic_weibo_repost"
              android:foreground="?android:attr/selectableItemBackground"
              android:gravity="center"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              tools:text="100"
              />

          <TextView
              android:id="@id/weibo_detail_tv_reply"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="@dimen/space.large"
              android:layout_marginStart="@dimen/space.large"
              android:drawablePadding="@dimen/space.very_small"
              android:drawableStart="@drawable/ic_weibo_comment"
              android:foreground="?android:attr/selectableItemBackground"
              android:gravity="center"
              android:textAppearance="@style/TextAppearance.AppCompat.Caption"
              tools:text="110"
              />

          <LinearLayout
              android:id="@id/weibo_detail_heart_container"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >

            <ImageView
                android:id="@id/weibo_detail_iv_like_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_weibo_like"
                />

            <TextSwitcher
                android:id="@id/weibo_detail_tv_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/space.very_small"
                android:inAnimation="@anim/anim_slide_in_counter"
                android:outAnimation="@anim/anim_slide_out_counter"
                >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                  tools:text="120"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                  tools:text="120"
                  />
            </TextSwitcher>
          </LinearLayout>
        </LinearLayout>
      </LinearLayout>

      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?android:actionBarSize"
          app:layout_collapseMode="pin"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          />

    </android.support.design.widget.CollapsingToolbarLayout>

  </android.support.design.widget.AppBarLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@id/weibo_detail_rv_comment_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      />

  <include
      layout="@layout/include_progressbar"
      android:id="@id/progress_bar"
      />

</android.support.design.widget.CoordinatorLayout>