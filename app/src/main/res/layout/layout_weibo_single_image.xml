<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space.very_small"
    >

  <ImageView
      android:id="@id/weibo_media_iv_img"
      android:layout_width="match_parent"
      android:layout_height="@dimen/weibo_media_height"
      android:contentDescription="@string/weibo_media"
      android:scaleType="fitStart"
      />

  <TextView
      android:id="@id/weibo_media_tv_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="@dimen/space.very_small"
      android:layout_gravity="end|bottom"
      android:background="@color/colorPrimary"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/white"
      android:visibility="gone"
      tools:text="长图"
      />

</FrameLayout>